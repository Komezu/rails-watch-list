<h3><%= @list.name.capitalize %></h3>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <strong><%= bookmark.movie.title %></strong><br>
      <em><%= bookmark.movie.overview %></em><br>
      Comment: <%= bookmark.comment %>
      <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<h4>Add a bookmark</h4>

<%# link_to "Add a bookmark", new_list_bookmark_path(@list) %>

<%= render "bookmarks/form", list: @list, bookmark: @bookmark %>

