<div class="banner">
  <div class="banner-container">
    <h1>The Watch List: Your Movie Bookmarks</h1>
    <p>What will you watch next?</p>
  </div>
</div>

<div class="container">
  <h2>
    My Lists
    <%= link_to(new_list_path, class: "icon-link") do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </h2>

  <div class="container-cards">
    <% @lists.each do |list| %>
      <%= link_to(list_path(list)) do %>
        <div class="card-category"><%= list.name.capitalize %></div>
      <% end %>
    <% end %>
  </div>
</div>

